<div class="container">
  <h2 class="my-5">A list of lists</h2>
  <%= link_to new_list_path do %>
    <p class="m-0 text-end"><i class="far fa-plus-square"></i> Add a list</p>
  <% end %>
  <ul class="cards mt-1">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <li>
          <% if list.image.key %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.image.key, crop: :fill %>')">
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_url ("movie_projector.jpg"), crop: :fill %>')">
          <% end %>
            <%= list.name %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
